{% extends 'base.html.twig' %}

{% block title %}
  Livre index
{% endblock %}

{% block body %}
  <h1>Livre index</h1>

  <table class="table">
    <thead>
      <tr>
        <th>Id</th>
        <th>Titre</th>
        <th>Description</th>
        <th>Date de parution</th>
        <th>Cat√©gories</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      {% for livre in livres %}
        <tr>
          <td>{{ livre.id }}</td>
          <td>{{ livre.Titre }}</td>
          <td>{{ livre.Description }}</td>
          <td>{{ livre.DateDeParution ? livre.DateDeParution|date('Y-m-d') : '' }}</td>
          <td>
            {% for categories in livre.getCategories() %}
              {{ categories.getNom() }}
              <br />
            {% endfor %}
          </td>
          <td>
            <a href="{{ path('app_livre_show', { id: livre.id }) }}">show</a>
            <a href="{{ path('app_livre_edit', { id: livre.id }) }}">edit</a>
          </td>
        </tr>
      {% else %}
        <tr>
          <td colspan="5">no records found</td>
        </tr>
      {% endfor %}
    </tbody>
  </table>

  <a href="{{ path('app_livre_new') }}">Create new</a>
{% endblock %}
